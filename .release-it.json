{
  "non-interactive": false,
  "dry-run": false,
  "verbose": false,
  "force": false,
  "hooks": {
    "after:release": null,
    "after:bump": ["npm run check:nightly:stark-versions -- ${version}", "npm run generate:changelog"],
    "before:init": ["npm run check:starter:stark-versions"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  },
  "git": {
    "changelog": "npm run generate:changelog-recent",
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "requireCommits": false,
    "commit": true,
    "commitMessage": "chore(release): release %s",
    "commitArgs": "",
    "tag": true,
    "tagName": "%s",
    "tagAnnotation": "%s",
    "push": true,
    "pushArgs": "--follow-tags",
    "pushRepo": "origin"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Release %s",
    "draft": false,
    "tokenRef": "GITHUB_TOKEN",
    "assets": null,
    "host": null
  }
}
